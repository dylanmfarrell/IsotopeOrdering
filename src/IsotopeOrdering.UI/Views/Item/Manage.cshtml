@model List<ItemItemModel>
@{
    ViewData[ViewDataKeys.Title] = "Manage Items";
}
<div class="table-responsive table-fadein mt-3">
    <table class="table table-hover table-bordered table-sm table-datatable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Audit Information</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr class="clickable" onclick="window.location = '@Url.Action(nameof(ItemController.Edit),"Item",new { id= item.Id})'">
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td><partial name="_AuditInformationView" for="@item" /></td>
                </tr>
            }
        </tbody>
    </table>
</div>

