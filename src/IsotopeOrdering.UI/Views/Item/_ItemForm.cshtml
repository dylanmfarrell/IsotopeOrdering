@model ItemDetailModel
<partial name="_AuditInformation" for="@Model" />
<div asp-validation-summary="All" class="alert alert-danger"></div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Item Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12 col-md-3">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control form-control-sm" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-3">
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <textarea asp-for="Description" class="form-control form-control-sm"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-3">
                        <div class="form-group">
                            <label asp-for="Unavailable"></label>
                            <input asp-for="Unavailable" class="form-control form-control-sm" type="checkbox" />
                            <span asp-validation-for="Unavailable" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-3">
                        <div class="form-group">
                            <label asp-for="Target"></label>
                            <input asp-for="Target" class="form-control form-control-sm" type="text" />
                            <span asp-validation-for="Target" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-3">
                        <div class="form-group">
                            <label asp-for="Reaction"></label>
                            <input asp-for="Reaction" class="form-control form-control-sm" type="text" />
                            <span asp-validation-for="Reaction" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-3">
                        <div class="form-group">
                            <label asp-for="FinalComposition"></label>
                            <input asp-for="FinalComposition" class="form-control form-control-sm" type="text" />
                            <span asp-validation-for="FinalComposition" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-3">
                        <div class="form-group">
                            <label asp-for="SpecificActivity"></label>
                            <input asp-for="SpecificActivity" class="form-control form-control-sm" type="text" />
                            <span asp-validation-for="SpecificActivity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-3">
                        <div class="form-group">
                            <label asp-for="QualityControlAnalysis"></label>
                            <input asp-for="QualityControlAnalysis" class="form-control form-control-sm" type="text" />
                            <span asp-validation-for="QualityControlAnalysis" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-3">
                        <div class="form-group">
                            <label asp-for="DefaultPrice"></label>
                            <i>This is the price initiated customers will be configured with for their materials</i>
                            <input asp-for="DefaultPrice" class="form-control form-control-sm" type="number" />
                            <span asp-validation-for="DefaultPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-3">
                        <div class="form-group">
                            <label asp-for="DefaultMinQuantity"></label>
                            <i>This is the minimum quantity initiated customers will allowed to order for this item</i>
                            <input asp-for="DefaultMinQuantity" class="form-control form-control-sm" type="number" />
                            <span asp-validation-for="DefaultMinQuantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-3">
                        <div class="form-group">
                            <label asp-for="DefaultMaxQuantity"></label>
                            <i>This is the maximum quantity initiated customers will allowed to order for this item</i>
                            <input asp-for="DefaultMaxQuantity" class="form-control form-control-sm" type="number" />
                            <span asp-validation-for="DefaultMaxQuantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <input type="submit" class="btn btn-success col-12 " value="Save Changes" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>