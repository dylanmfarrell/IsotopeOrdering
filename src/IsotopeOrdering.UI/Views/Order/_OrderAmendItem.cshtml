@model OrderItemDetailModel
    <li class="list-group-item border-info m-3 add-collection-item">
        <partial name="_AuditInformation" for="@Model" />
        <partial name="_ItemInformation" for="Item" />
        <partial name="_ItemConfigurationView" for="ItemConfiguration" />
        <div class="form-row">
            <div class="col-sm-12 col-md-4">
                <label asp-for="Quantity"></label>
                <input class="form-control form-control-sm" type="number" asp-for="Quantity" onchange="onQuantityChange(this);">
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="col-sm-12 col-md-4">
                <label asp-for="Price"></label>
                <input class="form-control form-control-sm" type="number" asp-for="Price" readonly name="ItemPrice">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="col-sm-12 col-md-4">
                <label asp-for="RequestedDate">Requested Date</label>
                <input class="form-control form-control-sm" type="date" asp-for="RequestedDate">
                <span asp-validation-for="RequestedDate" class="text-danger"></span>
            </div>
            <div class="col-sm-12 col-md-4">
                <label asp-for="SpecialInstructions"></label>
                <textarea class="form-control form-control-sm" asp-for="SpecialInstructions" rows="1"></textarea>
                <span asp-validation-for="SpecialInstructions" class="text-danger"></span>
            </div>

        </div>
    </li>