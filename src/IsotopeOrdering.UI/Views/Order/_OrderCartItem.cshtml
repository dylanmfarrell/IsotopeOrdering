@model OrderItemDetailModel
@{
    bool canDelete = ViewData[ViewDataKeys.Readonly] == null || (bool)ViewData[ViewDataKeys.Readonly] == false;
}
<li class="list-group-item mt-3">
    @using (Html.BeginCollectionItem("Cart")) {
        <partial name="_AuditInformation" for="@Model" />
        <partial name="_ItemInformation" for="Item" />
        <div class="form-row">
            <div class="col-sm-12 col-md-3">
                <div class="form-group">
                    <label asp-for="SpecialInstructions">Special Instructions</label>
                    <input class="form-control form-control-sm" readonly asp-for="SpecialInstructions">
                    <span asp-validation-for="SpecialInstructions" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 col-md-3">
                <div class="form-group">
                    <label asp-for="RequestedDate">Requested Date</label>
                    <input class="form-control form-control-sm" readonly type="date" asp-for="RequestedDate">
                    <span asp-validation-for="RequestedDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 col-md-3">
                <div class="form-group">
                    <label asp-for="Quantity">Quantity</label>
                    <input class="form-control form-control-sm" readonly type="number" asp-for="Quantity">
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 col-md-3">
                <div class="form-group">
                    <label asp-for="Price">Price</label>
                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            <div class="input-group-text">$</div>
                        </div>
                        <input type="number" readonly="readonly" asp-for="Price" class="form-control form-control-sm" />
                    </div>
                </div>
            </div>
        </div>
        @if (canDelete) {
            <button type="button" class="btn btn-sm btn-danger collection-remove" onclick="removeCollectionItem(this);" data-for=".list-group-item"><i class="fas fa-trash-alt"></i></button>
        }
    }
</li>