@model OrderItemDetailModel
<li class="list-group-item">
    @using (Html.BeginCollectionItem("Cart")) {
        <partial name="_AuditInformation" for="@Model" />
        <partial name="_ItemInformation" for="Item" />
        <partial name="_ItemConfigurationInformation" for="ItemConfiguration" />
        <div class="form-group">
            <label asp-for="Quantity">Quantity</label>
            <input class="form-control" readonly type="number" asp-for="Quantity">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SpecialInstructions">Special Instructions</label>
            <input class="form-control" readonly asp-for="SpecialInstructions">
            <span asp-validation-for="SpecialInstructions" class="text-danger"></span>
        </div>
        <button type="button" class="btn btn-danger" onclick="removeCollectionItem(this);" data-for=".list-group-item">Remove</button>
    }
</li>