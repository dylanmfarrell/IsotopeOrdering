@model ShipmentItemDetailModel
<li class="list-group-item p-2">
    <div class="custom-control custom-checkbox">
        <input type="hidden" asp-for="@Model.OrderItemId">
        <input class="custom-control-input" asp-for="@Model.IsSelected" type="checkbox">
        <label class="cursor-pointer font-weight-bold custom-control-label" asp-for="@Model.IsSelected" style="font-size:15px;">@Model.OrderItem.Item.Name</label>
        <div class="row cursor-pointer">
            <div class="col-sm-6 col-md-3">
                <div class="form-group">
                    <label>Quantity</label>
                    <input value="@Model.OrderItem.Quantity" class="form-control form-control-sm" readonly/>
                </div>
            </div>
            <div class="col-sm-6 col-md-3">
                <div class="form-group">
                    <label asp-for="OrderItem.Price"></label>
                    <input value="@Model.OrderItem.Price" class="form-control form-control-sm" readonly />
                </div>
            </div>
            <div class="col-sm-6 col-md-3">
                <div class="form-group">
                    <label>Special Instructions</label>
                    <input value="@Model.OrderItem.SpecialInstructions" class="form-control form-control-sm" readonly />
                </div>
            </div>
            <div class="col-sm-6 col-md-3">
                <div class="form-group">
                    <label>Requested Date</label>
                    <input value="@(Model.OrderItem.RequestedDate.HasValue ? Model.OrderItem.RequestedDate.Value.ToString() : "N/A")" class="form-control form-control-sm" readonly />
                </div>
            </div>
        </div>
    </div>
</li>