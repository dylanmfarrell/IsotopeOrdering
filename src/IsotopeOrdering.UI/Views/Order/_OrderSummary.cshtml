@model OrderCompleteDetailModel
<div class="card">
    <div class="card-header">
        Order Summary
    </div>
    <div class="card-body" style="text-align: right;">
        <ul class="list-group list-group-flush">
            @foreach (OrderItemDetailModel item in Model.OrderReview.Order.Cart) {
                <li class="list-group-item">Material - @(item.Item.Name + " $" + item.Price)</li>
            }
            @foreach (ShipmentDetailModel shipment in Model.Shipments) {
                <li class="list-group-item">Shipping - @(shipment.CourierName + " $" + shipment.ShippingCharge)</li>
            }
            <li class="list-group-item active">
                Estimated Total:  @("$" + Model.Total)
            </li>
        </ul>

    </div>
</div>
