@model AddressDetailModel
    <div class="row">
        <div class="col-6">
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-3 col-form-label">Address Name</label>
                <div class="col-sm-9">
                    <textarea asp-for="Name" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="State" class="col-sm-3 col-form-label">State</label>
                <div class="col-sm-9">
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="City" class="col-sm-3 col-form-label">City</label>
                <div class="col-sm-9">
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ZipCode" class="col-sm-3 col-form-label">Zip Code</label>
                <div class="col-sm-9">
                    <input asp-for="ZipCode" class="form-control" />
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group row">
                <label asp-for="Address1" class="col-sm-3 col-form-label">Address1</label>
                <div class="col-sm-9">
                    <textarea asp-for="Address1" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Address1" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Address2" class="col-sm-3 col-form-label">Address2</label>
                <div class="col-sm-9">
                    <input asp-for="Address2" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Address3" class="col-sm-3 col-form-label">Address3</label>
                <div class="col-sm-9">
                    <input asp-for="Address3" class="form-control" />
                </div>
            </div>
        </div>
    </div>