@inject MIR.Core.Domain.IRoleService RoleService
@inject MIR.Core.Domain.IUserService UserService
@inject IAuthorizationService AuthorizationService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MIR - Isotope Ordering</title>
    <link rel="icon" href="~/images/wustl-icon.png" />
    <link rel="stylesheet" href="~/dist/css/datatables.min.css" />
    <link rel="stylesheet" href="~/dist/css/site.min.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="logo-header hidden-print">
            <div class="container-fluid">
                <div class="row">
                    <img id="wusmLogo" src="~/images/wusmstl-logo-transparent-background.png" />
                    <img id="mirLogo" src="~/images/mir-logo-transparent-background.png" />
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MIR Pilot Funding</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @*<li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="requestDropDown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Requests
                            </a>
                            <div class="dropdown-menu bg-dark" aria-labelledby="requestDropDown">
                                <a class="nav-link" asp-controller="Request" asp-action="Create">Create New Funding Request</a>
                                <a class="nav-link" asp-controller="Request" asp-action="Index">View My Requests</a>
                            </div>
                        </li>
                        @if ((await AuthorizationService.AuthorizeAsync(User, PolicyConfiguration.ReportPolicy)).Succeeded) {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="reportDropDown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Reports
                                </a>
                                <div class="dropdown-menu bg-dark" aria-labelledby="reportDropDown">
                                    <a class="nav-link" asp-controller="Report" asp-action="ArchiveReport">Archive Report</a>
                                </div>
                            </li>
                        }
                        @if ((await AuthorizationService.AuthorizeAsync(User, PolicyConfiguration.AdminPolicy)).Succeeded) {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Admin
                                </a>
                                <div class="dropdown-menu bg-dark" aria-labelledby="adminDropdown">
                                    <a class="nav-link" asp-controller="Facility" asp-action="Index">Manage Facilities</a>
                                    <a class="nav-link" asp-controller="Reviewer" asp-action="Index">Manage Reviewers</a>
                                </div>
                            </li>
                        }*@
                    </ul>
                    <span class="navbar-text">
                        @($"{UserService.User.FirstName} {UserService.User.LastName} (")
                        @(string.Join(" - ", RoleService.UserRoles) + " )")
                    </span>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="bs-component">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">@ViewData["Title"]</li>
        </ol>
        <span id="alert-container">
            @*@Html.Raw(Html.GetAlert())*@
        </span>
    </div>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        <small>&copy; @DateTime.Now.Year - Mallinckrodt Institute of Radiology at Washington University School of Medicine</small>
        <input type="hidden" id="directoryUrl" value="@Url.Action("Get","Directory")" />
    </footer>
    <script src="~/dist/js/jquery.min.js"></script>
    <script src="~/dist/js/datatables.min.js"></script>
    <environment include="Development">
        <script src="~/js/site.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/js/site.min.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
