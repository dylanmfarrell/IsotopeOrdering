@inject IIsotopeOrderingAuthorizationService AuthorizationService
@inject IConfiguration Configuration
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData[ViewDataKeys.Title] - MIR - Isotope Ordering</title>
    <link rel="icon" href="~/images/wustl-icon.png" />
    <link rel="stylesheet" href="~/dist/css/datatables.min.css" />
    <link rel="stylesheet" href="~/dist/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://apps.mir.wustl.edu/MIRFileService/css/upload.css" />
</head>
<body>
    <header>
        <div class="logo-header hidden-print">
            <div class="container-fluid">
                <div class="row">
                    <img id="wusmLogo" src="~/images/wusmstl-logo-transparent-background.png" />
                    <img id="mirLogo" src="~/images/mir-logo-transparent-background.png" />
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MIR Isotope Ordering</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i>
                                Home
                            </a>
                        </li>
                        <partial name="_NavCustomer" />
                        @if (await AuthorizationService.AuthorizeAsync(User, Policies.CustomerPolicy)) {
                            <partial name="_NavOrder" />
                            <partial name="_NavShipment" />
                        }
                        @if (await AuthorizationService.AuthorizeAsync(User, Policies.AdminPolicy)) {
                            <partial name="_NavAdmin" />
                        }
                    </ul>
                    <span class="navbar-text">
                        <partial name="_UserInfo" />
                        <partial name="_RoleInfo" />
                    </span>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="@($"{Configuration["OpenId:Authority"]}/Account/Logout")">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="bs-component">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">@ViewData[ViewDataKeys.Title]</li>
        </ol>
        @if (TempData.Get<ApplicationResult>(ViewDataKeys.ApplicationResult) != null) {
            <partial name="_ApplicationResult" model="TempData.Get<ApplicationResult>(ViewDataKeys.ApplicationResult)" />
        }
    </div>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        <small>&copy; @DateTime.Now.Year - Mallinckrodt Institute of Radiology at Washington University School of Medicine</small>
    </footer>
    <script src="~/dist/js/jquery.min.js"></script>
    <script src="~/dist/js/datatables.min.js"></script>
    <environment include="Development">
        <script src="~/js/site.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/dist/js/site.min.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
