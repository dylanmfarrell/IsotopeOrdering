@model ShipmentDetailModel
<div class="card">
    <div class="card-header">
        @await Component.InvokeAsync("EventList", new { id = Model.Id, eventType = EntityEventType.Shipping })
        <h5 class="card-title mb-0">
            Shipment Details
        </h5>
    </div>
    <div class="card-body">
        <div class="border rounded mb-3 p-3 mt-2">
            <div class="row">
                <div class="form-group col-sm-12 col-md-6">
                    <label asp-for="Status"></label>
                    <input type="text" class="form-control form-control-sm" asp-for="Status" readonly />
                </div>
                <div class="form-group col-sm-12 col-md-6">
                    <label asp-for="ShipmentDate"></label>
                    <input type="date" class="form-control form-control-sm" asp-for="ShipmentDate" readonly />
                </div>
            </div>
        </div>
        <div class="border rounded p-3 mb-3">
            <h6 class="card-subtitle text-muted">Items To Ship</h6>
            <partial name="~/Views/Shipment/_ShipmentItemList.cshtml" for="Items" view-data="new ViewDataDictionary(ViewData) { { ViewDataKeys.Readonly , true } }" />
        </div>
        <div class="border rounded p-3 mb-3" id="shipping-information">
            <h6 class="card-subtitle text-muted">Shipping Information</h6>
            <partial name="_Address" for="Shipping" view-data="new ViewDataDictionary(ViewData) { { ViewDataKeys.Readonly , true } }" />
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-6">
                <div class="form-group border rounded p-3">
                    <h6 class="card-subtitle text-muted">Courier Name</h6>
                    <input type="text" asp-for="CourierName" class="form-control form-control-sm" readonly />
                </div>
                <div class="form-group border rounded p-3">
                    <h6 class="card-subtitle text-muted">Courier Details</h6>
                    <textarea asp-for="CourierDetails" class="form-control form-control-sm" rows="5" readonly></textarea>
                </div>
                <div class="form-group border rounded p-3">
                    <label asp-for="ShippingCharge"></label>
                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            <div class="input-group-text">$</div>
                        </div>
                        <input type="number" asp-for="ShippingCharge" class="form-control form-control-sm" readonly />
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6">
                <div class="border rounded p-3">
                    <partial name="_Document" for="Document" view-data="new ViewDataDictionary(ViewData) { { ViewDataKeys.UploadModule,UploadModules.ShipmentDocument} ,{ ViewDataKeys.Readonly,true} }" />
                </div>
            </div>
        </div>
    </div>
</div>
