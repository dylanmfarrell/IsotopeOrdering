@model ShipmentDetailModel
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            Shipment Details
        </h5>
    </div>
    <div class="card-body">
        <div class="border rounded mb-3 p-3 mt-2">
            <partial name="_CustomerItemView" for="Customer" />
        </div>

        <div class="border rounded mb-3 p-3 mt-2">
            <div class="row">
                <div class="form-group col-sm-12 col-md-6">
                    <label>Shipping Status</label>
                    <input type="text" class="form-control form-control-sm" asp-for="Status" readonly />
                </div>
                <div class="form-group col-sm-12 col-md-6">
                    <label>Shipment Date</label>
                    <input type="date" class="form-control form-control-sm" asp-for="ShipmentDate" readonly />
                </div>
            </div>
        </div>
        <div class="border rounded p-3 mb-3">
            <h6 class="card-subtitle text-muted">Items To Ship</h6>
            <partial name="_ShipmentItemList" for="Items" view-data="new ViewDataDictionary(ViewData) { { ViewDataKeys.Readonly , true } }" />
        </div>
        <div class="border rounded p-3 mb-3" id="shipping-information">
            <h6 class="card-subtitle text-muted">Shipping Information</h6>
            <partial name="_AddressView" for="Shipping" />
        </div>

        <div class="form-group border rounded p-3">
            <h6 class="card-subtitle text-muted">Courier Details</h6>
            <textarea asp-for="CourierDetails" class="form-control form-control-sm" rows="5" readonly></textarea>
        </div>
    </div>
</div>